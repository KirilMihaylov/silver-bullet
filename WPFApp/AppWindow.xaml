                    13
                </Grid.ColumnSpan>
                <suggestionBoxLib:SuggestionBox.Style>
                    <Style>
                        <Style.TargetType>
                            suggestionBoxLib:SuggestionBox
                        </Style.TargetType>
                        <Style.Triggers>
                            <DataTrigger>
                                <DataTrigger.Binding>
                                    <Binding>
                                        <Binding.ElementName>
                                            VariableSelector
                                        </Binding.ElementName>
                                        <Binding.Path>
                                            SelectedIndex
                                        </Binding.Path>
                                    </Binding>
                                </DataTrigger.Binding>
                                <DataTrigger.Value>
                                    -1
                                </DataTrigger.Value>
                                <DataTrigger.Setters>
                                    <Setter>
                                        <Setter.Property>
                                            suggestionBoxLib:SuggestionBox.IsEnabled
                                        </Setter.Property>
                                        <Setter.Value>
                                            False
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </suggestionBoxLib:SuggestionBox.Style>
                <suggestionBoxLib:SuggestionBox.Variable>
                    <Binding>
                        <Binding.Path>
                            Variable
                        </Binding.Path>
                        <Binding.Mode>
                            OneWay
                        </Binding.Mode>
