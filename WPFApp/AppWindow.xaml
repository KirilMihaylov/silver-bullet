                                    2
                                </UniformGrid.Columns>
                                <UniformGrid.VerticalAlignment>
                                    Top
                                </UniformGrid.VerticalAlignment>
                            </UniformGrid>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <DataTemplate.DataType>
